<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pager_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:paddingTop="@dimen/pager_topbottom_padding"
            android:paddingBottom="@dimen/pager_topbottom_padding"
            android:paddingStart="@dimen/pager_start_end_padding"
            android:paddingLeft="@dimen/pager_start_end_padding"
            android:paddingEnd="@dimen/pager_start_end_padding"
            android:paddingRight="@dimen/pager_start_end_padding"
            android:minHeight="@dimen/pager_min_height"
            android:textColor="@android:color/white"
            android:background="@color/teal500"
            android:textSize="@dimen/pager_text_size"
            android:textAllCaps="true"
            android:textStyle="bold"/>
        >
    </android.support.v4.view.ViewPager>

</LinearLayout>