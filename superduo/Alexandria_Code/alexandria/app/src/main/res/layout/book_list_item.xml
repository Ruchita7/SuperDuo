<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="@dimen/list_item_dimen"
    android:background="@drawable/touch_selector">

    <ImageView
        android:id="@+id/fullBookCover"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/list_item_dimen"
        android:contentDescription="@string/book_cover"
        android:src="@drawable/ic_launcher"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/listBookTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginRight="@dimen/list_item_margin"
        android:layout_toRightOf="@id/fullBookCover"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/book_title_text_size" />


    <TextView
        android:id="@+id/listBookSubTitle"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/list_item_margin"
        android:layout_toEndOf="@+id/fullBookCover"
        android:layout_toRightOf="@+id/fullBookCover"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="@dimen/book_subtitle_text_size" />


</RelativeLayout>